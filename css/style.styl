.footer
    color #fff
    background #526b87
    width 100vw
    .container
        display flex
        width 1140px
        height 130px
        flex-direction row
        justify-content space-between
        align-items center
        margin-left auto
        margin-right auto
        @media screen and (max-width: 1140px)
            width 100vw
        @media screen and (max-width: 860px)
            flex-direction column
            flex-wrap wrap
            justify-content space-around
        @media screen and (max-width: 414px)
            height 55px
        .item
            //display inline-block
            height 50px
        > .name
            padding-left 10px
            @media screen and (max-width: 860px)
                order 1
                width 50%
                text-align center
            @media screen and (max-width: 414px)
                display none
            span
                display block
                font-size 24px
        > .company
            text-align center
            line-height 24px
            @media screen and (max-width: 860px)
                order 2
                width 50%
            @media screen and (max-width: 500px)
                display none
        > .contacts
            text-align center
            line-height 24px
            @media screen and (max-width: 860px)
                order 3
                width 50%
            @media screen and (max-width: 414px)
                width 100%
                margin-top -20px
            a
                color #fff
                @media screen and (max-width: 414px)
                    &:first-child
                        display none
        > .terms
            padding-right 10px
            @media screen and (max-width: 860px)
                order 4
                width 50%
            @media screen and (max-width: 500px)
                display none
            ul
                padding 0
                margin 0
                list-style none
                line-height 24px
                text-align right
                @media screen and (max-width: 860px)
                    text-align center
                li
                    a
                        display inline-block
                        color #fff
                        line-height 16px

