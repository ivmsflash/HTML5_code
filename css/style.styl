.ibtn
    display block
    width 166px
    margin-left auto
    margin-right auto
    > p
        position absolute
        z-index 1
        width 166px
        text-align center
        color white
        font-size 18px
        margin 10px auto
    &:after
        position relative
        display block
        width 166px
        height 42px
        content ''
        background url(../img/btn.png) no-repeat center center
.form-group
    display block
    height 45px
    margin-top 5px
    //text-align left
    > .form-label
        position absolute
        color #999999
    > .form-label-error
        color #ff0000
    > .form-input
        height 28px
        padding 0 5px
        margin-top 16px
        font-size 14px
        color #526b87
        background white
        border 1px solid #999999
        border-radius 3px
        resize none
